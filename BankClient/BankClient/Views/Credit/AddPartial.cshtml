    <table class="table table-bordered">
        <tr>
            <td>@Html.LabelFor(x => x.Ammount)</td>
            <td>@Html.EditorFor(x => x.Ammount)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.Percent)</td>
            <td>@Html.EditorFor(x => x.Percent)</td>

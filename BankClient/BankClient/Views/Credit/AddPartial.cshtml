        <tr>
            <td>@Html.LabelFor(x => x.Description)</td>
            <td>@Html.EditorFor(x => x.Description)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.DayOfCredit)</td>
            <td>@Html.EditorFor(x => x.DayOfCredit)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.ClientId)</td>
